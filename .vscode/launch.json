{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run fn-tests",
            "runtimeExecutable": "pnpm",
            "cwd": "${workspaceFolder}",
            "args": [
                "--filter",
                "@nackswinget/functions",
                "test",
                "--",
                "--runInBand"
            ]
        },
        {
            "name": "ts-node",
            "type": "node",
            "request": "launch",
            "args": [
                "src/test.ts"
            ],
            "env": {
                "DEBUG": "*"
            },
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceFolder}",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}